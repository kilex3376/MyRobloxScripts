-- 1. Спидхак (Скорость бега)
Tab:CreateSlider({
   Name = "WalkSpeed (Спидхак)",
   Range = {16, 200},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value)
       game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
   end,
})

-- 2. Увеличение Прыжка (JumpPower)
Tab:CreateSlider({
   Name = "JumpPower (Высота прыжка)",
   Range = {50, 300},
   Increment = 1,
   CurrentValue = 50,
   Callback = function(Value)
       game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
       -- Включаем использование JumpPower вместо JumpHeight
       game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true
   end,
})

-- 3. Увеличение дистанции Dash (Рывка)
-- В Blox Fruits это обычно делается через изменение параметров в скриптах игры
Tab:CreateButton({
   Name = "Infinite Dash (Беск. рывок)",
   Callback = function()
       -- Пример простого обхода кулдауна рывка
       local old; old = hookmetamethod(game, "__namecall", function(self, ...)
           local method = getnamecallmethod()
           if method == "FireServer" and self.Name == "Dash" then
               -- Тут можно добавить логику для частого использования
           end
           return old(self, ...)
       end)
       print("Dash модифицирован!")
   end,
})
